<section class="featured-posts no-padding-top no-padding-bottom">
  <div class="container">
    <header>
      <h2>Latest movies</h2>
    </header>

    <% @movies.each_with_index do |movie, index| %>
      <% if index.even? %>
        <%= render 'home/movie_highlight_left', movie: movie %>
      <% else %>
        <%= render 'home/movie_highlight_right', movie: movie %>
      <% end %>
    <% end %>
  </div>
</section>