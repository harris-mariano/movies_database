<% content_for :title, "#{@movie.title}" %>

<div class="row mt-4">
  <!-- Left Content -->
  <div class="col-12 col-sm-8">
    <p><%= image_tag @movie.image.url(:medium), class: "img-fluid" %></p>
    <div class="movie-content">
      <h5>Movie Plot</h5>
      <p><%= @movie.summary %></p>
      <h5>Director</h5>
      <p><%= @movie.director %></p>
      <h5>Release Year</h5>
      <p><%= @movie.release_year %></p>
      <h5>Genre</h5>
      <p><%= @movie.genre %></p>
      <h5>Movie Ratings</h5>
      <p><%= @movie.genre %></p>

      <% if current_user&.admin? %>
        <%= link_to "Edit", edit_movie_path(@movie), class: 'btn btn-warning' %>
        <%= button_to "Delete", @movie, class: "btn btn-danger", method: :delete, confirm: 'Are you sure?' %>
      <% end %>

      <hr/>
      <h5 class="mt-3">Cast and Crew</h5>
      <table class="table table-bordered">
