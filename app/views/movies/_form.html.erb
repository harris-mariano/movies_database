      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :release_year, "Release Year" %>
    <%= f.text_field :release_year, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :genre, "Genre" %>
    <%= f.text_field :genre, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :director, "Director" %>
    <%= f.text_field :director, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :summary, "Summary" %>
    <%= f.text_area :summary, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image, "Select Image" %>
    <%= f.file_field :image, class: "form-control-file" %>
  </div>

  <%= link_to "Back", movies_path, class: "btn btn-danger" %>
  <%= f.submit "Submit", class: "btn btn-primary float-right" %>
<% end %>