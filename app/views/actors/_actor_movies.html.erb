<h3>Movies</h3>

<ul class="list-group">
  <% if @actor.movies.blank? %>
    No movies found!
  <% else %>
    <% @actor.movies.order(created_at: :desc).each do |movie| %>
      <li class="list-group-item d-flex">
        <div class="col-md-2">
          <%= link_to (image_tag movie.image.url(:medium), width: "100", height: "100"), movie %>
        </div>
        <div class="col-md-10">
          <p class="mb-0"><%= link_to movie.title, movie %></p>
          <small><%= movie.genre %> - <%= movie.release_year %></small>
        </div>
      </li>
    <% end %>
  <% end %>
</ul>