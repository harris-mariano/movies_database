<%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
  <h1 class="h3 mb-3 font-weight-normal">Sign up</h1>

  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name, class: "form-control", placeholder: "First name", required: true, autofocus: true %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name, class: "form-control", placeholder: "Last name", required: true %>

  <%= f.label :email, "Email address" %>
  <%= f.email_field :email, class: "form-control", placeholder: "Email address", required: true %>

  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control", required: true %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: "form-control", required: true %>

  <%= f.submit "Submit", class: "btn btn-primary mt-3" %>
<% end %>